generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
  runtime  = "vercel-edge"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  image String?
  role  String  @default("USER") // Anda bisa menambahkan role untuk admin/pengguna
}

model Course {
  id          String   @id @default(uuid())
  title       String   @unique
  slug        String   @unique // URL yang ramah SEO
  description String?
  price       Int      @default(0)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
